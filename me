import java.util.Scanner;

public class BeginnerAbbreviation {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        sc.nextLine(); // consume the leftover newline
        for (int i = 0; i < n; i++) {
            String word = sc.nextLine();
            if (word.length() > 10) {
                // Step 4: Build abbreviation
                char first = word.charAt(0); // first letter
                char last = word.charAt(word.length() - 1); // last letter
                int middleCount = word.length() - 2; // number of letters in between

                // Step 5: Print abbreviation
                System.out.println(first + "" + middleCount + "" + last);
            } else {
                // Step 6: Print word unchanged
                System.out.println(word);
            }
        }

        sc.close();
    }
}

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.IOException;

public class BeginnerAbbreviation {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

        // Read first non-empty line and parse integer n
        String line;
        int n = -1;
        while ((line = br.readLine()) != null) {
            line = line.trim();
            if (line.length() == 0) continue; // skip blank lines
            try {
                n = Integer.parseInt(line);
                break;
            } catch (NumberFormatException e) {
                System.err.println("Expected an integer on the first non-empty line but got: " + line);
                return;
            }
        }

        if (n < 0) {
            System.err.println("No integer found in input.");
            return;
        }

        // Read words until we have n words (words can be on separate lines or same line)
        int count = 0;
        while (count < n && (line = br.readLine()) != null) {
            if (line.trim().length() == 0) continue; // skip blank lines
            String[] tokens = line.trim().split("\\s+");
            for (String word : tokens) {
                if (word.length() > 10) {
                    char first = word.charAt(0);
                    char last = word.charAt(word.length() - 1);
                    int middleCount = word.length() - 2;
                    System.out.println("" + first + middleCount + last);
                } else {
                    System.out.println(word);
                }
                count++;
                if (count >= n) break;
            }
        }

        // If we exited early because input ended
        if (count < n) {
            System.err.println("Input ended before " + n + " words were provided.");
        }
    }
}
